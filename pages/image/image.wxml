<image src="{{imgPath}}"/>

<!-- 3.bindload: 监听图片加载完成 -->
<!-- lazy-load: 图片懒加载(上下三屏幕) -->
<view>-------------------------------------------------</view>
<image wx:for="{{1}}"
src="https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg"
bindload="handleImgLoad" 
lazy-load/>

<!-- 4.show-menu-by-longpress :长按识别二维码 -->
