.goods-item {
  color: #666;
  font-size: 30rpx;
  padding-bottom: 85rpx;
  margin: 10rpx 10rpx;
}

.image {
  width: 100%;
}

.desc-info {
  position: absolute;
  left: 10rpx;
  right: 0;
  bottom: 5rpxï¼›;
}

.desc-info .title {
  overflow: hidden;
  white-space: nowrap;
